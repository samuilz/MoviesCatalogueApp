<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quicksilver.moviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/avengers_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/avengers_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity
            android:name=".views.appstart.ApplicationStartActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.movieDetails.MovieDetailsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".views.movieCreate.MoviesCreateActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".views.movieGenres.MoviesGenresActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_genres" />
        <activity
            android:name=".views.moviesList.MoviesListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name=".views.movieHome.HomeActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_home_activity" />
        <activity
            android:name=".views.about.AboutUsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="About Us" />
        <activity android:name=".views.users.login.LoginActivity" />
        <activity android:name=".views.users.register.RegisterActivity"></activity>
    </application>

</manifest>